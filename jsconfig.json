{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
